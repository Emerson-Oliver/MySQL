/* O COMANDO SELECT
	seleção
	projeção
	junção
*/

/*ALIAS DE COLUNAS*/
SELECT NOW(); /*MOSTRA DATA E HORA*/
SELECT NOW() as DATA_HORA;
SELECT NOW() as DATA_HORA, 'EMERSON OLIVEIRA' as ALUNO;
SELECT 'EMERSON OLIVEIRA'; /* MOSTRA EMERSON OLIVEIRA*/

/*BUSCANDO DADOS DE TABELAS
	PROJEÇÃO = SELECT
*/
SELECT NOME, SEXO, EMAIL FROM CLIENTE;
SELECT NOME AS CLIENTE, SEXO, EMAIL FROM CLIENTE; /* SUBSTITUI O CAMPO NOME POR CLIENTE APENAS PROJEÇÃO "VISUALIZAÇÃO | ALIAS" */
SELECT NOME, SEXO, EMAIL, ENDERECO FROM CLIENTE; /* ALTERANDO ORDEM DOS CAMPOS */
SELECT ENDERECO, SEXO, EMAIL, NOME FROM CLIENTE; /* ALTERANDO ORDEM DOS CAMPOS */
SELECT ENDERECO, SEXO, EMAIL, NOME, NOW() AS DATA_HORA FROM CLIENTE; /* ALTERANDO ORDEM DOS CAMPOS PROJETANDO DADOS QUE NÃO EXISTE NA TABELA */

/* BUSCA TODAS OS DADOS DA TABELA RECOMENDADO APENAS PARA USO ACADEMICO */
SELECT * FROM CLIENTE;

/*FILTROS EM NIVEL DE LINHA
	SELEÇÃO = (WHERE = "ONDE")
*/

/*FILTRANDO*/

SELECT NOME, SEXO FROM CLIENTE WHERE SEXO = 'F'; /*RETORNA NOMES D0 SEXO FEMININO  DA TABELA CLINETE */
SELECT NOME, ENDERECO FROM CLIENTE WHERE SEXO = 'M'; /*RETORNA NOME E ENDERECO DA TABELA CLINETE DO SEXO MASCULINO*/
SELECT NOME, SEXO FROM CLIENTE WHERE ENDERECO = 'SP'; /*NÃO RETONA NADA POIS NÃO HÁ UM ENDEREÇO QUE SEJA APENAS = SP*/

/*UTILIZANDO O LIKE
	CARACTER CORINGA %
*/

SELECT NOME, SEXO FROM CLIENTE WHERE ENDERECO LIKE '%SP';

